{
  interactionDefinition "intDef20130513112646502.txt"
  text "title" "BubbleSort" (150, 30) color (0, 0, 0) depth 1 font SansSerif size 12
  rectangle "frame1" offset (-5, -5) from "title" NW offset (5, 5) from "title" SE color (0, 0, 0) depth 2 filled  fillColor (255, 175, 175)
  codegroup "description" at (10, 110) color (0, 0, 0) highlightColor (0, 0, 0) contextColor (0, 0, 0) font SansSerif size 12 depth 1
  addCodeLine "Information about this algorithm:" to "description"
  addCodeLine "Bubble sort, sometimes incorrectly referred to as sinking sort, is a simple sorting algorithm  " to "description"
  addCodeLine "that works by repeatedly stepping through the list to be sorted," to "description"
  addCodeLine "comparing each pair of adjacent items and swapping them  " to "description"
  addCodeLine "if they are in the wrong order. The pass through the list is repeated" to "description"
  addCodeLine "until no swaps are needed, which indicates that the list is sorted." to "description"
  addCodeLine "The algorithm gets its name from the way smaller elements bubble to the top of the list." to "description"
  addCodeLine "Because it only uses comparisons to operate on elements, " to "description"
  addCodeLine "it is a comparison sort. Although the algorithm is simple, " to "description"
  addCodeLine "some other algorithms are more efficient for sorting large lists." to "description"
  rectangle "Rect3" offset (-5, -5) from "description" NW offset (5, 5) from "description" SE color (0, 0, 0) depth 2 filled  fillColor (192, 192, 192)
}
