  codegroup "sourceCode" at (10, 200) color (0, 0, 255) highlightColor (255, 0, 0) contextColor (0, 0, 0) font SansSerif size 12 depth 1
  addCodeLine "If isSorted = true" to "sourceCode"
  addCodeLine " terminate the algorithm" to "sourceCode" indentation 3
  addCodeLine " otherwise set isSorted = true " to "sourceCode" indentation 3
  addCodeLine "Compare the element at position i with element at position j," to "sourceCode"
  addCodeLine "element at position i is greater then element at position j," to "sourceCode"
  addCodeLine " then switch elements,and set isSorted=false" to "sourceCode" indentation 3
  addCodeLine " otherwise do nothing." to "sourceCode" indentation 3
  addCodeLine "if i position is last position of the list" to "sourceCode"
  addCodeLine " then start from the beginn of the list ,the same all over again" to "sourceCode" indentation 3
  addCodeLine " otherwise go to position i + 1 and j + 1 and compare it again.." to "sourceCode" indentation 3
